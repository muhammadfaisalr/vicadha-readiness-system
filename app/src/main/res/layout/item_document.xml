<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="8dp"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_toStartOf="@id/buttonDelete"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">


        <TextView
            android:gravity="center"
            android:id="@+id/textAvatar"
            android:layout_gravity="center|start"
            android:layout_width="64dp"
            android:layout_height="wrap_content"
            android:background="@drawable/all_rounded"
            android:fontFamily="@font/montserrat_bold"
            android:padding="16dp"
            android:textAlignment="center"
            android:text="MF"
            android:textColor="@color/greenPrimary" />

        <LinearLayout
            android:gravity="center|start"
            android:layout_marginStart="16dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textTitle"
                android:textSize="16sp"
                android:textColor="@color/black"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/montserrat"
                android:text="Muhammad Faisal"/>

            <TextView
                android:id="@+id/textSender"
                android:textSize="16sp"
                android:textColor="@color/grayText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/montserrat"
                android:text="+62 81234567890"/>

        </LinearLayout>

    </LinearLayout>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/buttonDelete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/delete"
        android:textSize="12sp"
        style="@style/Widget.MaterialComponents.Button.OutlinedButton"
        android:textColor="#E57373"
        app:strokeColor="#E57373"
        android:layout_alignParentEnd="true"
        android:layout_centerInParent="true"/>

</RelativeLayout>